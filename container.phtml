            </a>
        </nav>
        </nav>
    </div>
    <!-- / .main-navbar -->
    <div class="main-content-container container-fluid px-4">
        <!-- Page Header -->
        <div class="page-header row no-gutters py-4">
            <div class="col-12 col-sm-4 text-center text-sm-left mb-0">
                <span class="text-uppercase page-subtitle">Dashboard</span>
                <h3 class="page-title">CONSULTAS MEDICAS</h3>
            </div>
        </div>
        <!-- End Page Header -->
        <div class="row">
            
            <!-- TBL Bitacora -->
            <div class="row">
                <div class="col">
                    <div class="card card-small mb-4">
                        <div class="card-header border-bottom">
                            <h6 class="m-0">Historial de Consultas</h6> &nbsp;
                            <button type="button" class="btn btn-secondary add-bitacora">Agregar Bitacora</button>
                        </div>
                        <div class="card-body p-0 pb-3 text-center">
                            <table class="table mb-0" id="tbl_bitacora">
                                <thead class="bg-light">
                                    <tr>
                                        <th class="border-0" scope="col" style="width: 111px;"></th>
                                        <th class="border-0" scope="col">Fecha</th>
                                        <th class="border-0" scope="col">Hora</th>
                                        <th class="border-0" scope="col">Nombre</th>
                                        <th class="border-0" scope="col">Sexo</th>
                                        <th class="border-0" scope="col">Area</th>
                                        <th class="border-0" scope="col">#Empleado</th>
                                        <th class="border-0" scope="col">Supervisor</th>
                                        <th class="border-0" scope="col">Diagnostico</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End TBL Bitacora -->
        
        </div>

        <!-- Begin Modals -->
        <div class="row">
            <div id="modal-add-bitacora" class="modal" tabindex="-1" role="dialog">
                <div class="modal-dialog modal-lg" role="document" style="width: 70%;">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title title-modal-bit">Agregar Bitacora</h5>
                            <button type="button" class="close close-bitacora" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="col-md-8 order-md-1">
                                    <form>
                                        <div id="FormBitacora">
                                        <div class="row">
                                            <div class="col-md-8 mb-3">
                                                <h4>Fecha: <span class="badge badge-secondary fec-bitacora"></span></h4>
                                            </div>
                                        </div>
                                        
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label for="nombre-edit">Num. Empleado</label>
                                                <select class="custom-select SelectEmpleado" id="SelectEmpleado">
                                                    <option selected value="0">Seleccionar...</option>
                                                </select>
                                            </div>
        
                                            <div class="col-md-6 mb-3" id="InfoEmpleado" style="display:none">
                                                
                                            </div>
                                        </div>
        
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label for="SelectSupervisor">Supervisor</label>
                                                <select class="custom-select" id="SelectSupervisor">
                                                </select>
                                                <button class="btn btn-danger add-supervisor" data-toggle="tooltip" data-placement="top" title="Agregar un Supervisor..">
                                                    <i class="fa fa-plus-circle" aria-hidden="true"></i>
                                                </button>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label for="SelectClasificacion">Clasificacion</label>
                                                <select class="custom-select" id="SelectClasificacion">
                                                </select>
                                                <button class="btn btn-danger add-clasif" data-toggle="tooltip" data-placement="top" title="Agregar clasificaciÃ³n..">
                                                    <i class="fa fa-plus-circle" aria-hidden="true"></i>
                                                </button>
                                            </div>
                                        </div>
        
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label for="SelectTurno">Turno</label>
                                                <select class="custom-select" id="SelectTurno">
                                                    <option value="1">1</option>
                                                    <option value="2">2</option>
                                                    <option value="3">3</option>
                                                </select>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label for="SelectAtendio">Atendio</label>
                                                <select class="custom-select" id="SelectAtendio">
                                                </select>
                                            </div>
                                        </div>
        
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label for="diagnostico">Diagnostico</label>
                                                <textarea id="diagnostico" class="form-control"></textarea>
                                            </div>
                                        </div>
        
                                        <hr class="mb-4">
                                        <button class="btn btn-outline-success" id="save-bitacora" type="button">Guardar</button>
                                        <button class="btn btn-outline-primary" id="upd-bitacora" type="button" style="display: none;" data-toggle="tooltip" data-placement="top" title="Actualizar">
                                            Actualizar
                                        </button>
                                        <button class="btn btn-danger" id="cancel-upd" type="button" style="display: none;" data-toggle="tooltip" data-placement="top" title="Cancelar Actualizacion">
                                            <i class="fas fa-ban"></i>
                                        </button>
                                    </div>
    
                                    <div class="row" id="DetailFormBitacora" style="display: none">
                                        <div class="col-md-6 mb-3 InfoPaciente">
                                            
                                        </div>
                                        <div class="col-md-6 mb-3 InfoBitacora">
                                            
                                        </div>
                                    </div>
    
                                    <div class="row addMedBit" style="display:none">
                                        <div class="col-md-6 mb-3">
                                            <label for="SelectMedicamento">Medicamento</label>
                                            <select class="custom-select" id="SelectMedicamento" style="width: 200px">
                                            </select>
                                        </div>
                                        <div class="col-md-6 mb-3 TotQuantity" style="display: none">
                                            <label for="TotQuantity">Cantidad</label>
                                            <input type="text" name="TotQuantity" id="TotQuantity" class="form-control" placeholder="" value="" required="true" style="width: 100px">
                                        </div>
                                    </div>
    
                                    <div class="row addMedBit" style="display:none">
                                        <div class="col-md-6 mb-3">
                                            <button type="button" class="btn btn-warning add-med-bit" data-toggle="tooltip" data-placement="top" title="Agregar medicamentos a la bitacora..">
                                                <span>Agregar Medicamento</span>&nbsp;<i class="fas fa-cart-plus"></i>
                                            </button>
                                        </div>
                                    </div>
    
                                    <div class="row col-md-8 order-md-1 addMedBit" style="display:none;margin-left: 45px !important;">
                                        <table class="table table-responsive" id="tbl_bitmed">
                                            <thead class="thead-dark">
                                                <tr>
                                                    <th scope="col"></th>
                                                    <th scope="col">Tipo Med.</th>
                                                    <th scope="col">Presentacion</th>
                                                    <th scope="col">Medicamento</th>
                                                    <th scope="col">Cantidad</th>
                                                    <th scope="col">Fecha Creacion</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            </tbody>
                                        </table>
                                    </div>
                                    </form>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary close-bitacora" data-dismiss="modal">Cerrar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Modals -->
    </div>
</main>